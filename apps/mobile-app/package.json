{
  "name": "@mobouzer/mobile-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "pnpm -w shared build && expo start --dev-client",
    "android": "expo start --dev-client --android",
    "ios": "expo start --dev-client --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "watch": "tsc --watch",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"./src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write ./",
    "postinstall": "node ./bin/postInstall",
    "eas-build-pre-install": "node ./bin/eas-preInstall",
    "eas-build-post-install": "pnpm -w shared build",
    "eas:build:development": "eas build --platform all --profile development --no-wait",
    "eas:build:development:android": "eas build --platform android --profile development --no-wait",
    "eas:build:development:ios": "eas build --platform ios --profile development --no-wait",
    "upload-sourcemaps": "node -r dotenv/config ./bin/upload-sourcemaps"
  },
  "bin": {
    "eslint": "../../node_modules/.bin/eslint",
    "prettier": "../../node_modules/.bin/prettier"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.2.2",
    "@expo-google-fonts/space-mono": "^0.2.2",
    "@expo/vector-icons": "^13.0.0",
    "@gorhom/bottom-sheet": "^4.4.4",
    "@mobouzer/shared": "workspace:*",
    "@react-native-async-storage/async-storage": "~1.17.3",
    "@react-native-firebase/app": "15.4.0",
    "@react-native-firebase/auth": "15.4.0",
    "@react-native-firebase/firestore": "15.4.0",
    "@react-navigation/bottom-tabs": "^6.3.3",
    "@react-navigation/native": "^6.0.12",
    "@react-navigation/native-stack": "^6.8.0",
    "@rnmapbox/maps": "10.0.0-beta.44",
    "@sentry/react-native": "4.2.2",
    "@skillnation/react-native-firebase-hooks": "^0.5.0",
    "@turf/bbox": "^6.5.0",
    "@turf/center": "^6.5.0",
    "@turf/center-of-mass": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@turf/nearest-point": "^6.5.0",
    "dotenv": "^16.0.2",
    "expo": "~46.0.17",
    "expo-application": "~4.2.2",
    "expo-asset": "~8.6.1",
    "expo-auth-session": "~3.7.1",
    "expo-build-properties": "^0.3.0",
    "expo-checkbox": "~2.2.0",
    "expo-constants": "~13.2.4",
    "expo-dev-client": "~1.3.0",
    "expo-device": "~4.3.0",
    "expo-font": "~10.2.0",
    "expo-linking": "~3.2.2",
    "expo-location": "~14.3.0",
    "expo-random": "~12.3.0",
    "expo-splash-screen": "~0.16.2",
    "expo-status-bar": "~1.4.0",
    "expo-system-ui": "~1.3.0",
    "expo-updates": "~0.14.5",
    "expo-web-browser": "~11.0.0",
    "formik": "^2.2.9",
    "geojson": "^0.5.0",
    "lodash": "^4.17.21",
    "moti": "^0.18.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-native": "0.69.6",
    "react-native-gesture-handler": "~2.5.0",
    "react-native-reanimated": "~2.9.1",
    "react-native-safe-area-context": "4.3.1",
    "react-native-screens": "~3.15.0",
    "react-native-web": "~0.18.7",
    "sentry-expo": "~5.0.0",
    "twrnc": "^3.4.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/geojson": "^7946.0.10",
    "@types/lodash": "^4.14.185",
    "@types/react": "~18.0.0",
    "@types/react-native": "~0.69.1",
    "jetifier": "^2.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "jsx-a11y/no-noninteractive-tabindex": 0,
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/no-onchange": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      }
    ],
    "ignorePatterns": [
      "app.config.ts"
    ],
    "plugins": [
      "jsx-a11y",
      "react",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "17.0"
      }
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
