{
  "name": "@mobouzer/mobile-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "pnpm -w build && expo start --dev-client",
    "android": "expo start --dev-client --android",
    "ios": "expo start --dev-client --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "watch": "tsc --watch",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"./src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write ./",
    "postinstall": "node ./bin/postInstall",
    "recrawl": "watchman watch-del ./; watchman watch-project ./",
    "eas-build-pre-install": "echo $GOOGLE_SERVICES_ANDROID_BASE64 | base64 --decode > ./google-services.json && echo $GOOGLE_SERVICES_IOS_BASE64 | base64 --decode > ./GoogleService-Info.plist",
    "eas-build-post-install": "pnpm -w build",
    "eas:build:development": "eas build --platform all --profile development --no-wait",
    "eas:build:development:android": "eas build --platform android --profile development --no-wait",
    "eas:build:development:ios": "eas build --platform ios --profile development --no-wait"
  },
  "bin": {
    "eslint": "../../node_modules/.bin/eslint",
    "prettier": "../../node_modules/.bin/prettier"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.2.2",
    "@expo-google-fonts/space-mono": "^0.2.2",
    "@expo/vector-icons": "^13.0.0",
    "@gorhom/bottom-sheet": "^4",
    "@mobouzer/shared": "workspace:*",
    "@react-native-async-storage/async-storage": "~1.17.3",
    "@react-native-firebase/app": "14.11.1",
    "@react-native-firebase/auth": "14.11.1",
    "@react-native-firebase/firestore": "14.11.1",
    "@react-navigation/bottom-tabs": "^6.0.5",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.1.0",
    "@rnmapbox/maps": "10.0.0-beta.32",
    "@skillnation/react-native-firebase-hooks": "^0.5.0",
    "dotenv": "^16.0.1",
    "expo": "^45.0.0",
    "expo-application": "~4.1.0",
    "expo-asset": "~8.5.0",
    "expo-auth-session": "~3.6.1",
    "expo-checkbox": "~2.1.0",
    "expo-constants": "~13.1.1",
    "expo-dev-client": "~1.0.1",
    "expo-font": "~10.1.0",
    "expo-linking": "~3.1.0",
    "expo-location": "~14.2.2",
    "expo-random": "~12.2.0",
    "expo-splash-screen": "~0.15.1",
    "expo-status-bar": "~1.3.0",
    "expo-system-ui": "~1.2.0",
    "expo-updates": "~0.13.4",
    "expo-web-browser": "~10.2.1",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "moti": "^0.18.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-firebase-hooks": "^5.0.3",
    "react-native": "0.68.2",
    "react-native-clusterer": "^1.2.0",
    "react-native-gesture-handler": "~2.2.1",
    "react-native-maps": "0.30.2",
    "react-native-reanimated": "~2.8.0",
    "react-native-safe-area-context": "4.2.4",
    "react-native-screens": "~3.11.1",
    "react-native-web": "0.17.7",
    "swr": "^1.2.2",
    "twrnc": "^3.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-typescript": "^7.18.6",
    "@expo/config-types": "^45.0.0",
    "@types/lodash": "^4.14.182",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.67.6",
    "jetifier": "^2.0.0",
    "react-test-renderer": "17.0.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "jsx-a11y/no-noninteractive-tabindex": 0,
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/no-onchange": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off"
        }
      }
    ],
    "ignorePatterns": [
      "app.config.ts"
    ],
    "plugins": [
      "jsx-a11y",
      "react",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "17.0"
      }
    },
    "env": {
      "browser": true,
      "node": true
    }
  }
}
