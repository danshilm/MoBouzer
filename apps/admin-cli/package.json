{
  "name": "@mobouzer/admin-cli",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "start": "node dist/index.js",
    "dev": "pnpm -w build && ts-node src/index.ts",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"./src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write ./"
  },
  "bin": {
    "eslint": "../../node_modules/.bin/eslint",
    "prettier": "../../node_modules/.bin/prettier"
  },
  "dependencies": {
    "@mobouzer/shared": "workspace:*",
    "axios": "^0.27.2",
    "commander": "^9.4.0",
    "common-tags": "^1.8.2",
    "dotenv": "^16.0.1",
    "firebase-admin": "^11.0.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "qs": "^6.11.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/common-tags": "^1.8.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.2",
    "@types/qs": "^6.9.7",
    "typescript": "^4.7.4"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.8.0",
  "eslintConfig": {
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
